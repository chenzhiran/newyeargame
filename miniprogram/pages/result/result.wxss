/* pages/result/result.wxss */

/* 所有的背景 */
.showBgImg{
  width: 100%;
  height: 100%;
  background: #A62116;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

/* 海报背景图片 */
.bgImg{
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 10;
}

.score{
  position: fixed;
  color: black;
  text-shadow:6px 6px 10px rgb(241, 136, 126);
  top: 37%;
  left: 240rpx;
  font-size: 140rpx;
  font-weight:bold;
  z-index: 11;
}


/* 分享海报按钮 */
.share-btn{
  width: 250rpx;
  height: 88rpx;
  color:white!important;
  border: none!important;
  border-radius: 44rpx;
  background:linear-gradient(90deg,rgb(241, 73, 58),#A62116);
  box-shadow: 0px 4px 8px 0px rgb(241, 136, 126); 
  font-size: 32rpx;
  display: inline-block;
  line-height: 88rpx;
  
  position: fixed;
  bottom:60rpx;
  left: 60rpx;
  z-index: 10;
}

.click-btn{
  width: 250rpx;
  height: 88rpx;
  color:white!important;
  border: none!important;
  border-radius: 44rpx;
  background:linear-gradient(90deg,rgb(241, 73, 58),#A62116);
  box-shadow: 0px 4px 8px 0px rgb(241, 136, 126); 
  font-size: 32rpx;
  display: inline-block;
  line-height: 88rpx;
  
  position: fixed;
  bottom:60rpx;
  right: 60rpx;
  z-index: 10;
}

.imagePathBox{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
}

.shengcheng{
  width: 80%;
  height: 80%;
  position: fixed;
  top: 50rpx;
  left: 50%;
  margin-left: -40%;
  z-index: 10;
}
.baocun{
  display: block;
  width: 80%;
  height: 80rpx;
  padding: 0;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
  left: 10%;
  background: #A62116;
  color: white;
  font-size: 32rpx;
  border-radius: 44rpx;
}
button[class="baocun"]::after{
  border: 0;
}